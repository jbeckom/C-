<Window x:Class="ConstsAndEnums.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConstsAndEnums"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Enter a value:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.515,-0.537"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="95,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.044,-0.779"/>
        <TextBlock x:Name="txtOutput" HorizontalAlignment="Left" Margin="95,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.167,-1.582" Height="144" Width="120"/>
        <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left" Margin="95,190,0,0" VerticalAlignment="Top" Width="75" Click="Run"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="175,190,0,0" VerticalAlignment="Top" Width="75" Click="ClearOutput"/>

    </Grid>
</Window>
